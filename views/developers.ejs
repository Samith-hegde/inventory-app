<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>

  <body>
    <h1> <%= title %> </h1>
    <ul>
        <% developers.forEach(function(developer) { %>
            <li>
                <strong> <%= developer.name %> </strong>
                <p> Founded in: <%= developer.founded %> </p>
                <p> Location: <%= developer.location %> </p>
                <a href="/developers/edit/<%= developer._id %>">Edit</a>
                <a href="/developers/delete/<%= developer._id %>">Delete</a>
              </li>
        <% }); %>
    </ul>
    <button onclick="window.location.href='/developers/add'">Add a new developer</button>
  </body>
</html>